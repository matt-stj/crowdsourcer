<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>

<header>
  <% include ../partials/header %>
</header>

<main>
    <body class="center">
      <h3>Vote Now!</h3>

      <h4>Poll Title: <%= poll.title %></h4>
      <h5>Question: <%= poll.question %></h5>

      <h5>Choices:</h5>

      <% for (var choice in poll.choices) {%>
        <% if (poll.choices.hasOwnProperty(choice)) {%>
          <button type="button" name="button" class="btn-floating btn-large waves-effect waves-light">
            <%= choice %>
          </button>
        <% } %>
      <% } %>


      <% if (!poll.isPrivate) {%>
        <div class="container">
          <% include ../partials/poll-results %>
        </div>
      <% } %>
    </body>
  </main>
  <footer>
    <% include ../partials/footer %>
  </footer>


</html>
